extends layout2

block content
    .container-fluid
      .row
        .col.l3.s12
          .card
            .card-content
              p= result.jenis_rumah
              h5= result.nama_rumah
              li.divider
              br
              p
                i.material-icons location_on
                b#location= result.location
              p
                i.material-icons vpn_key
                b= result.kuota + ' unit Entire House'
              p
                i.material-icons person
                b= result.capacity + ' guests'
              p.center.orange-text
                b= result.activity
              p
                | Dates
              .bord3
                form
                  input#date(name='date', type='date')
              p
                | Guests
              .bord3
                form
                  input#tamu.center(name='tamu', value='1', type='number')
              br
              p.right
                | Starts from IDR &nbsp;
                b= result.harga
              br
            .card-action
              #search.grad.white-text
                .input-field
                  h5#book.center.white-text Request to book
        .col.l9.s12.padtop
          .row
            .col.l6.s12
              iframe(src= result.video_url , allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='', width='100%', height='450', frameborder='0')
            .col.l6.s12.center
              - for (var i = 1; i <= 4; ++i) {
                img.responsive-img.itemrmh(src='images/product_thumb/rumah'+ result.id_rumah + '_' + i +'.jpg',alt='Not Available')
              - }
          .row
            .col.l6.s6
              h6
                b Entire House
              p= result.capacity + ' Guests ' + result.kuota + ' House'
            .col.l6.s6
              h6
                b#nama_rumah= result.nama_rumah
              p= desc
          .row
            .col.l6.s6
              h6
                b Facilities
              p= result.facilities
            .col.l6.s6
              h6
                b Meet the Host
              p= result.host_desc
          .row
            .col.l6.s6
              h6
                b Activity
              h6
                p= result.activity
          .row
            .col.l6.s6
              h6
                b Availability
              input#tanggalan.datepicker(placeholder='click here', type='text')
            .col.l6.s6
              #cekava
          .row
            .col.l12.s12.left
              h6
                b Location
              iframe(src= result.maps_url, style='border:0', allowfullscreen='', width='100%', height='450', frameborder='0')
              input#id_rumah(value= result.id_rumah ,type="number", hidden=true)
              h3
                a.center.black-text(href="/house") More Houses
    br
    .divider
    footer.page-footer.white
      .container
        .row
          .col.l4.s12
            h5.black-text Lokapoin
            p
              a.black-text(href='about') About
              br
              a.black-text(a='', href='#') Career
              br
              a.black-text(a='', href='#') Press
              br
              a.black-text(a='', href='#') Policies
              br
              a.black-text(a='', href='#') Help
          .col.l4.s12
            h5.black-text Joining Lokapoin
            p.black-text
              a.black-text(href="/host") Become a Host
          .col.l4.s12
            h5.black-text Our Social Media
            ul
              .container
                li
                  a.black-text(href='#!')
                    h6
                      i.fa.fa-instagram
                      a.black-text(href="https://www.instagram.com/lokapoin/?hl=en") Lokapoin
                li
                  a.black-text(href='#!')
                    h6
                      i.fa.fa-facebook
                      a.black-text(href="https://www.facebook.com/lokapoin/") Lokapoin
                li
                  a.black-text(href='#!')
                    h6
                      i.fa.fa-youtube
                      a.black-text(href="https://www.youtube.com/channel/UCLzUP3QWCrO_nV2nomJb9vg") Lokapoin
      .footer-copyright
        .container.black-text
          center PT. Lokapoin Kreasi Indonesia
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='javascripts/materialize.js')
    script(src='javascripts/init.js')
    script(src='javascripts/house.js')
