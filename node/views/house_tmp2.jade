extends layout2


block content
    .container-fluid
      each val in result
        .row
          .col.l12.s12.padtop
            .row
              a(href="/house?id=" + val.id_rumah)
                h3.center.black-text= val.nama_rumah
                .col.l6.s12
                  iframe(src= val.video_url , allow='accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture', allowfullscreen='', width='100%', height='450', frameborder='0')
                .col.l6.s12.center
                  - for (var i = 1; i <= 4; ++i) {
                    img.responsive-img.itemrmh2(src='images/product_thumb/rumah'+ val.id_rumah + '_' + i +'.jpg',alt='Not Available')
                  - }
            .divider
    h3.center Lokapoin Houses
    br
    .divider
    footer.page-footer.white
      .container
        .row
          .col.l4.s12
            h5.black-text Lokapoin
            p
              a.black-text(href='about') About
              br
              a.black-text(a='', href='#') Career
              br
              a.black-text(a='', href='#') Press
              br
              a.black-text(a='', href='#') Policies
              br
              a.black-text(a='', href='#') Help
          .col.l4.s12
            h5.black-text Joining Lokapoin
            p.black-text
              a.black-text(href="/host") Become a Host
          .col.l4.s12
            h5.black-text Our Social Media
            ul
              .container
                li
                  a.black-text(href='#!')
                    h6
                      i.fa.fa-instagram
                      a.black-text(href="https://www.instagram.com/lokapoin/?hl=en") Lokapoin
                li
                  a.black-text(href='#!')
                    h6
                      i.fa.fa-facebook
                      a.black-text(href="https://www.facebook.com/lokapoin/") Lokapoin
                li
                  a.black-text(href='#!')
                    h6
                      i.fa.fa-youtube
                      a.black-text(href="https://www.youtube.com/channel/UCLzUP3QWCrO_nV2nomJb9vg") Lokapoin
      .footer-copyright
        .container.black-text
          center PT. Lokapoin Kreasi Indonesia
